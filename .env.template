# Your Azure DevOps Personal Access Token
# Make sure it has sufficient permissions for work item management
AZURE_DEVOPS_PAT=your_personal_access_token_here

# The full URL to your Azure DevOps organization
# Example: https://dev.azure.com/your-organization
AZURE_DEVOPS_ORGANIZATION_URL=https://dev.azure.com/your-organization

# Default project to use when not specified in the request
# This is optional but recommended
AZURE_DEVOPS_DEFAULT_PROJECT=your-default-project-name

# Default team to use for sprint/iteration queries
# This is required for sprint-related queries
AZURE_DEVOPS_DEFAULT_TEAM="your-default-team-name"

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
